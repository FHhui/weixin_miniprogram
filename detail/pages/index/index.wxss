.container{
  padding-top: 0;
  background-color: rgba(198, 230, 169, 0.295);
  height: 100%;
}

swiperBanner_1 {
  width: 100%;
  margin-left: 0rpx;
  margin-right: 0 rpx;
}

.slide-image {
  width: 100%;
  height: 420rpx !important;
  margin-left: 0rpx;
  margin-right: 0 rpx;
}

swiper {
  width: 100%;
  height: 420rpx !important;
}

.info-price {
  border-bottom: 1px solid #f6f6f6;
  background: #fff;
  padding: 20px 15px;
}

.info-title {
  float: left;
  background: #fff;
  margin-top: -8px;
  font-size: 15px;
  margin-left: -20rpx;
}

.price {
  float: right;
  margin-top: -15px;
  color: #f66;
  font-size: 25px;
  text-align: right;
}

.price em {
  font-size: 12px;
  margin-left: 20px;
}

.info-seller {
  margin-top: 20px;
  padding: 0 15px;
  font-size: 13px;
  background:#fff;
  height: 40px;
}

.checkSeller_info {
  vertical-align: middle;
  width: 16px;
  height: 16px;
}

.su_name {
  vertical-align: middle;
  font-size: 15px;
}

.arrow {
  width: 10px;
  height: 10px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  position: absolute;
  right: 20rpx;
  transform: rotate(45deg);
  margin-top: 30rpx;
}

.details_box {
  font-size: 13px;
  background: #fff;
  height:500px;
}

.to_buy{
  position: fixed;
  bottom: 0;
  display: flex;
  width:100%;
  justify-content:center;
}

.button-green{
  background-color: rgba(55, 182, 72, 0.651);
}

