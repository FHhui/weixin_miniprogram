/* pages/main/main.wxss */
.container {
  padding: 0rpx;
  width: 100%;
  height: 100%;
  background-color: #ddd7d7;
}

.search {
  width: 80%;
  height: 100rpx;
}

.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 35rpx;
  margin-top: 15rpx;
  height: 60rpx;
  background-color: white;
}

.search_arr input {
  margin-left: 60rpx;
  margin-top: 5rpx;
  height: 0rpx;
  border-radius: 5px;
}

.bc_text {
  line-height: 68rpx;
  height: 68rpx;
  margin-top: 34rpx;
}

.sbutton {
  margin-left: 580rpx;
  margin-top: -45rpx;
  width: 15%;
  line-height: 150%;
  text-align: center;
  border: 1px solid #ac89b1;
  border-radius: 10rpx;
}
.page_row {
  border-top: 2px solid #ededed;
  border-bottom: 2px solid #ededed;
  display: flex;
  flex-direction: row;
}

.searchicon {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left: 25rpx;
  z-index: 2;
  width: 20px;
  margin-top: 10rpx;
  margin-left: 20rpx;
  height: 20px;
  text-align: center;
}

swiperBanner {
  width: 100%;
  margin: 0 auto;
}

.swiperBanner image {
  width: 100%;
  height: 420rpx !important;
}

swiper {
  width: 100%;
  height: 420rpx !important;
}

.icon {
  border-top: 2px solid #ededed;
  border-bottom: 2px solid #ededed;
  display: flex;
  padding: 12px 0;
}

.icon image {
  display: block;
  width: 30px;
  height: 30px;
  margin: 0 auto;
  padding-top: 10px;
}

.icon text {
  display: block;
  text-align: center;
  width: 100%;
  font-size: 14px;
  color: #333;
  padding-top: 10px;
}

.icon navigator {
  flex: 1 0 25%;
}

.title {
  padding: 10px 0;
}

.title text {
  display: block;
  width: 100%;
  text-align: center;
  color: #333;
}

.title .cn {
  font-size: 16px;
}

.title .en {
  font-size: 12px;
}

.list {
  width: 46%;
  height: 300rpx;
  float: left;
  margin-left: 20rpx;
  margin-top: 40rpx;
  position: relative;
}





